{
  "name": "neo-brisnet",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "admin-dashboard",
    "infra"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin-dashboard",
    "build": "npm run build --workspaces",
    "deploy": "npm run deploy --workspace=infra",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:studio": "npm run studio --workspace=backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
